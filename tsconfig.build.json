{
  "extends": "./tsconfig.app.json",
  "exclude": [
    "src/**/__tests__/*",
    "lib/**/stories/*",
    "lib/**/__tests__/*"
  ],
  "include": [
    "lib"
  ],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "declaration": true,
    "outDir": "dist",
  }
}